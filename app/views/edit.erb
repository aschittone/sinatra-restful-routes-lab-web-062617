<form action="/recipes/<%=@recipe.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="">Name: </label><input type="text" name="name" value="<%=@recipe.name%>">
  <br></br>
  <label for="">Ingredients: </label><input type="text" name="ingredients" value="<%=@recipe.ingredients%>">
  <br></br>
  <label for="">Cook Time: </label><input type="text" name="cook_time" value="<%=@recipe.cook_time%>">
  <input type="submit" value="submit">
</form>
